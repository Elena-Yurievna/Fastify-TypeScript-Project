<%- include('partials/header', { title: 'Home Page' }) %>

<div class="container-fluid">
    <form action="/send-request" method="POST">
        <div class="form-group">
            <label for="url">Request URL:</label>
            <input type="text" name="url" class="form-control" id="url" placeholder="Enter Request URL">
        </div>
        <div class="form-group">
            <label for="method">Request Type:</label>
            <select name="method" class="form-control" id="method">
                <option value="GET">GET</option>
                <option value="POST">POST</option>
            </select>
        </div>
        <div class="form-group">
            <label for="body">Request Body:</label>
            <textarea class="form-control" id="body" name="body" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="headers">Request Headers:</label>
            <textarea class="form-control" id="headers" name="headers" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('partials/footer') %>
